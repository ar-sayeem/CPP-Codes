#include<bits/stdc++.h>         // "bits/stdc++.h" is a header file that include all the standard libraries.
using namespace std;

int main()
{
    int T, Children, Candies, Packet=0, Remain=0;
    cin >> T;
    for(int i=0; i<=T; i++)         // For-loop for test case.
    {
        cin >> Children >> Candies;         // User input number of Children & Candies.
        if(Candies > Children)          //
        {
            cout << 0 << endl;          // 1 candy to each is enough if Candies > Children, So no Packet need.
        }
        else
        {
            Remain = Children - Candies;            // Extra candies need.
            Packet = Remain/4;              // Each Packet has 4 Candies.
            if(Remain%4 != 0)           // Even if 1 Candy  is short, need another Packet, so increase number of Packets.
            {
                Packet++;
            }
            cout << Packet << endl;         // Print the number of Packets needed.
        }
    }
    return 0;
}
